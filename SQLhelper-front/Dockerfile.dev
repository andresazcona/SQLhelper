# Development Dockerfile for SQLhelper Frontend

FROM node:20-alpine

# Set working directory
WORKDIR /app

# Install dependencies for hot reload
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Expose port
EXPOSE 5173

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
